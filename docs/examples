
module org.bovinegenius.example-01/Main

import wombat.vmu/Screen

let mut score: u8 = 0

type point = { x: u8, y: u8 }

main : unit -> unit
main() {
  let x: u8 = sum(4, 6);
  Screen.display(1, 1, s"Result of 4 + 6: ${x}");
}

sum : (u8, u8) -> u8
sum(left, right) = left + right

bin-hex-test : unit -> u8
bin-hex-test() {
  let x: u8 = 0b00000010;
  let y: u8 = 0x0F;
  x + y
}

